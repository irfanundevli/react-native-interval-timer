{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./*",
      ],
      "@/screens/*": ["./src/app/screens/*"],
      "@/hooks/*": ["./src/app/hooks/*"]
    },
    "strict": true,
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
