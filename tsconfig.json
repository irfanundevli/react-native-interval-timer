{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./*",
      ],
      "@/hooks/*": ["./src/app/hooks/*"],
      "@/screens/*": ["./src/app/screens/*"],
      "@/store": ["./src/app/store"],
      "@/utils/*": ["./src/app/utils/*"],
    },
    "strict": true,
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
